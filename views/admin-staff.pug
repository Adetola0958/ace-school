include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container")
                         div(class="container")
                            div(class="d-flex justify-content-between")
                                h5 Staffs
                                p #[a(href="/school/staff/new" class="ace-btn") New Staff #[i(class="fa fa-plus ml-1")]]
                            
                            .row.justify-content-center
                                .col-md-10
                                    if success
                                        if success.length != 0
                                            .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                                button.close(type="button" data-dismiss="alert" aria-label="close")
                                                    span(aria-hidden="true") Ã—
                                                span #{success}
                                    
                                    if noStaff
                                        .card
                                            p.text-small #{noStaff}
                                    if staffs
                                        div(class="table-responsive card")
                                            table(class="table table-bordered" id="dataTable")
                                                thead.thead-light 
                                                    tr 
                                                        th S/N 
                                                        th Staff ID
                                                        th Full Name
                                                        th Role
                                                        th View
                                                tbody 
                                                    each staff , index in staffs
                                                        - let id = staff.staffID
                                                        - let name = `${staff.lastName} ${staff.firstName}`
                                                        - let role = staff.role
                                                        - let staffUrl = "/school/staff/" + staff._id
                                                        - i++ 
                                                        tr 
                                                            td #{index + 1} 
                                                            td #{id}
                                                            td #{name}
                                                            td #{role}
                                                            td #[a(href=staffUrl class="main-link") Check Profile]

        include includes/footer.pug