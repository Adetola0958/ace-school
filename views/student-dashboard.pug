include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container")
                        h6.mb-3 Profile
                        div(class="row justify-content-center")
                            div(class="col-md-10")
                                div(class="row")
                                    div(class="col-md-5")
                                        div(class="card")
                                            if student.profilePhoto
                                                - let imageUrl = "/uploads/schools/" + code + '/' + className.name + '/' + student.profilePhoto
                                                img(src=imageUrl alt="" width="100%" height="300px")
                                            else
                                                img(src="/images/default-avatar.png" alt="" width="100%" height="300px")
                                            
                                    div(class="col-md-7")
                                        div(class="card-box")
                                            .row
                                                .col-3
                                                    label(for="ID" class="label") Student ID:
                                                .col-9
                                                    input(type="text" value= student.studentID class="profile-form mb-4" readonly)
                                                .col-3
                                                    label(for="class" class="label") Class:
                                                .col-9
                                                    input(type="text" value= className.name class="profile-form mb-4" readonly)
                                                .col-3
                                                    label(for="firstname" class="label") First Name:
                                                .col-9
                                                    input(type="text" value= student.firstName class="profile-form mb-4" name="firstName" readonly)
                                                .col-3
                                                    label(for="lastname" class="label") Last Name:
                                                .col-9
                                                    input(type="text" value= student.lastName class="profile-form mb-4" name="lastName" readonly)
                                                .col-3
                                                    label(for="pthername" class="label") Other Name:
                                                .col-9
                                                    input(type="text" value= student.otherName class="profile-form mb-4" name="otherName" readonly)
                                                .col-3
                                                    label(for="gender" class="label") Gender:
                                                .col-9
                                                    input(type="text" value= student.gender class="profile-form mb-4" name="gender" readonly)
                                                .col-3
                                                    label(for="dateOfBirth" class="label") Date of Birth:
                                                .col-9
                                                    - let age = student.dateOfBirth.getDate() + "/" + (student.dateOfBirth.getMonth() + 1) + "/" + student.dateOfBirth.getFullYear()
                                                    input(type="text" value=age class="profile-form mb-4" readonly)
                                                .col-3
                                                    label(for="pNumber" class="label") Parent's No:
                                                .col-9
                                                    input(type="text" value= student.parentsNumber class="profile-form mb-4" name="pNumber" readonly)

        include includes/footer.pug