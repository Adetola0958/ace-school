include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container")
                        
                        h5(class="mb-4") #{title}
                        .row
                            .col-md-6
                                if success
                                    if success.length != 0
                                        .alert.alert-success.alert-dismissible.fade-in(role="alert")
                                            button.close(type="button" data-dismiss="alert" aria-label="close")
                                                span(aria-hidden="true") Ã—
                                            span #{success}
                                            
                        div(class="row justify-content-center")
                            div(class="card col-md-11")
                                if classchools
                                    .row
                                        each classchool in classchools.subjects
                                            - let deleteUrl = "/school/class/" + mainClass + "/subjects/" + classchool + "/delete"
                                            div(class="col-lg-3 col-md-6 mb-2")
                                                .box
                                                    p(class="float-left") #{classchool}
                                                    a(class="float-right red" href=deleteUrl) #[i(class="fa fa-trash")]
                                                    div(class="clearfix")
                                hr
                                div(class="text-center mt-4")
                                    a(class="main-btn" href="#" id="add") Add more subjects
                                    div(class="row justify-content-center")
                                        div(class="col-md-6")
                                            div(class="form-field hide-form")
                                                form(method="POST")
                                                    input(type="text" class="form-control mb-3" name="subject" placeholder="Subject")
                                                    input(type="submit" class="ace-btn" value="Add")
                                                    a(href="#" class="cancel-btn ml-3" id="cancel") Cancel
        script(src="/javascripts/subjects.js")
        include includes/footer.pug