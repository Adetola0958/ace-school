include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container")
                        h6.mb-3 Classes you teach (#{course})
                        div(class="row justify-content-center")
                            div(class="col-md-10")
                                div(class="card")
                                    if classes
                                        each className in classes
                                            table.table.table-bordered
                                                tr
                                                    th #{className}
                                                    - let courseUrl = '/staff/exam/' + exam.examCode + '/courses/' + course + '/' + className
                                                    - let resultUrl = '/staff/exam/' + exam.examCode + '/courses/' + course + '/' + className + '/results'
                                                    td #[a(href=courseUrl class="main-link") Create/View Exam]
                                                    td #[a(href=resultUrl class="main-link") Check Students' Results]

        include includes/footer.pug