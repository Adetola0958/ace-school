include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container")
                        h6.mb-3 #{course.courseName}, #{course.className}
                        .row.justify-content-center
                            .col-md-10.card
                                p #{questions.question.length} questions created.
                                div(class="question-field")
                                    div(class="row justify-content-center")
                                        each question in questions.question
                                            div(class="col-md-10 each-field mb-3")
                                                
                                                p(class="question") #[strong #{question.questionNumber}]. #{question.mainQuestion}
                                                p
                                                    span.mr-2 (A) #{question.options.optionA}
                                                    span.mr-2 (B) #{question.options.optionB}
                                                    span.mr-2 (C) #{question.options.optionC}
                                                    span.mr-2 (D) #{question.options.optionD} 
                                            
                                                      
                                                if question.image
                                                    p   
                                                        - let imageUrl = "/uploads/schools/" + schoolAdmin.schoolCode + "/exam-" + exam.examCode + "/" + course.courseName + "-" + course.className + "/" + question.image
                                                        img(src=imageUrl, alt="image" height="50px" width="50px")
                                                hr

        include includes/footer.pug