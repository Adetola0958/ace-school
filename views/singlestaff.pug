include includes/header.pug
block content
    link(rel='stylesheet' , href='/stylesheets/dashboard.css')
    body
        div(id="wrapper")
            include includes/sidenav.pug
            div(id="content-wrapper" class="d-flex flex-column")
                div(id="content")
                    include includes/usernav.pug
                    div(class="container mt-2")
                        div(class="row justify-content-center")
                            div(class="col-md-10")
                                div(class="row")
                                    div(class="col-md-5")
                                        div(class="card")
                                            if staffDB.profilePhoto
                                                - let imageUrl = "/uploads/schools/" + schoolAdmin.schoolCode + "/staffs/" + staffDB.profilePhoto
                                                img(src=imageUrl alt="" width="100%" height="300px")
                                            else
                                                img(src="/images/default-avatar.png" alt="" width="100%" height="300px")
                                            label(class="btn-file2 mt-4") #[i(class="fa fa-upload pr-2")] Change Image
                                                input(type="file" name='picture' id='picture')

                                    div(class="col-md-7 mt-3")
                                        div(class="card-box")
                                            .row
                                                .col-3
                                                    label(for="ID" class="label") Staff ID:
                                                .col-9
                                                    input(type="text" value= staffDB.staffID class="profile-form mb-4" readonly)
                                                if staffDB.role == "Teacher"
                                                    .col-3
                                                        label(for="class" class="label") Class Taken:
                                                    .col-9
                                                        input(type="text" value= staffDB.class.className class="profile-form mb-4" readonly)
                                                        span
                                                            a(href="#" class="btn btn-small btn-danger float-right") Edit
                                                .col-3
                                                    label(for="firstname" class="label") First Name:
                                                .col-9
                                                    input(type="text" value= staffDB.firstName class="profile-form mb-4" name="firstName")
                                                .col-3
                                                    label(for="lastname" class="label") Last Name:
                                                .col-9
                                                    input(type="text" value= staffDB.lastName class="profile-form mb-4" name="lastName")
                                                .col-3
                                                    label(for="pthername" class="label") Email:
                                                .col-9
                                                    input(type="text" value= staffDB.email class="profile-form mb-4" name="otherName")
                                                .col-3
                                                    label(for="gender" class="label") Role:
                                                .col-9
                                                    input(type="text" value= staffDB.role class="profile-form mb-4" name="gender")
                                                
                                    div(class="col-md-12 mt-3 text-center")
                                        input(type="submit" class="main-btn"  value="Update")

        
        include includes/footer.pug